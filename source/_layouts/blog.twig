<!DOCTYPE html>
<html>
    {% include '_snippets/head.twig' %}
    <body>
    
        {% if (post.id >= 10) %}
        {% include '_snippets/parallax.twig' %}
        {% else %}
        {% include '_snippets/navbar.twig' %}

        {% endif %}
        <div class="container container-tight">
          <div class="col-12">
            <br>
            {% if (post.id >= 10) %}
            {% include '_snippets/postinfo.twig' %}
            {% include '_snippets/commentsCounter.twig' %}
            
            <br><br>
            <div class="divider"></div>
            
            {% endif %}

            {% block content %}{% endblock %}
            
            <br>
            <br>
            {% if (post.id >= 10) %}
            {% include '_snippets/disqus.twig' %}
            {% endif %}
          </div>
        </div>

        <!-- footer -->
        <br>
        <br>
        <br>
        <br>
        
        {% include '_snippets/footer.twig' %}

        <!-- scripts -->
        {% include '_snippets/scripts.twig' %}

    </body>
</html>